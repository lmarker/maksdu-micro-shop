<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.maksdu.user.mapper.UserManagerMapper">
 
    <resultMap id="BaseResultMap" type="com.maksdu.user.domain.User">
        <result column="identity" jdbcType="VARCHAR" property="Identity"/>
        <result column="nickName" jdbcType="VARCHAR" property="nickName" />
        <result column="avatar" jdbcType="VARCHAR" property="avatar" />
        <result column="description" jdbcType="VARCHAR" property="description" />
        <result column="metaJson" jdbcType="VARCHAR" property="metaJson" />
        <result column="sex" jdbcType="INTEGER" property="sex"/>
    </resultMap>
 
    <select id="findByIdentity" resultType="com.maksdu.user.domain.User">
        select * from user_mc where identity = #{identity}
    </select>
    
    <insert id="createUser" >
    	INSERT INTO user_mc(identity, nickName, sex, avatar, description, metaJson) values 
    	(#{identity},#{nickName},#{sex},#{avatar},#{description},
    	#{metaJson})
    </insert>
 
 
</mapper>