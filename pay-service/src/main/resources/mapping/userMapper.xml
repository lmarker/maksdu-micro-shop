<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.maksdu.pay.mapper.AccountMapper">
 
    <resultMap id="BaseResultMap" type="com.maksdu.pay.domain.UserAccount">
        <result column="id" jdbcType="INTEGER" property="id"/>
        <result column="accountid" jdbcType="VARCHAR" property="accountId" />
        <result column="userid" jdbcType="VARCHAR" property="userId" />
        <result column="remainAmount" jdbcType="DECIMAL" property="remainAmount"/>
    </resultMap>
 
    <select id="selectQuery" resultType="com.maksdu.pay.domain.UserAccount">
        select * from account where accountid = #{id}
    </select>
 
 	<update id="updateAccount">
 		update account set remainAmount=#{remainAmount} where accountid=#{accountId}
 	</update>
</mapper>
